<h4>商品編集</h4>

<%= form_with model: @item, url: admin_item_path do |f| %>
  <table>

    <tr>
      <td>商品画像</td>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>

    <tr>
      <td>商品名</td>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <td>商品説明</td>
      <td><%= f.text_area :introduction %></td>
    </tr>

    <tr>
      <td>ジャンル</td>
      <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
    </tr>

    <tr>
      <td>税抜価格</td>
      <td><%= f.number_field :price %>円</td>
    </tr>

    <tr>
      <td>販売ステータス</td>
      <td>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "販売中" %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "販売停止中" %>
      </td>
    </tr>

    <tr>
      <td></td>
      <td> <%= f.submit '編集する' %></td>
    </tr>

  </table>
<% end %>