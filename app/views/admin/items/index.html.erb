<div class="container">
  <h4>商品一覧</h4>
  <div class="row">
    <div class="col-lg-11 text-right my-1">
      <%= link_to "＋", new_admin_item_path, class: "btn btn-outline-info rounded-circle p-15 m-1" %>
    </div>
    <div class="col-lg-10 mx-auto">
      <table class="table table-hover table-inverse mx-auto my-3">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th></th>
            <th>ステータス</th>
          </tr>
          <tbody>
            <% @items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td><%= link_to item.name, admin_item_path(item.id) %></td>
                <td><%= item.price.to_s(:delimited) %></td>
                <td><%= item.genre.name %></td>
                <td></td>
                <td>
                  <% if item.is_active %>
                    <span class="text-success">販売中</span>
                  <% else %>
                    <span class="text-secondary">販売停止中</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
            <%= paginate @items %>
          </tbody>
        </thead>
      </table>
    </div>
  </div>
</div>