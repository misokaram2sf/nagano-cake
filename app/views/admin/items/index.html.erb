<h4>商品一覧</h4>

<%= link_to '＋', new_admin_item_path %>

<table>

  <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ジャンル</th>
    <th></th>
    <th>ステータス</th>
  </tr>

  <%= @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item.id) %></td>
      <td><%= item.price.to_s(:delimited) %></td>
      <td><%= item.genre.name %></td>
      <td></td>
      <td>
        <% if item.is_active %>
          <span class="text-success">販売中</span>
        <% else %>
          <span class="text-secondary">販売停止中</span>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<%= paginate @items %>