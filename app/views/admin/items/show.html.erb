<h4>商品詳細</h4>

<table>

  <tr>
    <td>商品名</td>
    <td><%= @item.name %></td>
  </tr>

  <tr>
    <td>商品説明</td>
    <td><%= @item.introduction %></td>
  </tr>

   <tr>
    <td>ジャンル</td>
    <td><%= @item.genre_id %></td>
  </tr>

   <tr>
    <td>税込価格<br>(税抜価格)</td>
    <td>
      <%= with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円
    </td>
  </tr>

   <tr>
    <td>販売ステータス</td>
    <td>
      <% if item.is_active %>
        <span class="text-success">販売中</span>
      <% else %>
        <span class="text-secondary">販売停止中</span>
      <% end %>
    </td>
  </tr>

</table>

<%= link_to '編集する' edit_admin_item _path(@item) %>