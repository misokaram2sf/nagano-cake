<div class="container">
  <h4>商品詳細</h4>
  <div class="row my-3">
    <div class="col-lg-4">
      <div class="card-img-top m-1">
        <%= image_tag @item.get_image, size: "400x300" %>
      </div>
    </div>

    <div class="col-lg-4 mx-auto">
      <table class="table table-borderless">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br>(税抜価格)</td>
          <td>
            <%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円
          </td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_active %>
              <span class="text-success">販売中</span>
            <% else %>
              <span class="text-secondary">販売停止中</span>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="text-center">
    <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success  mx-auto" %>
  </div>
</div>
