<div class="container">
  <h3>注文履歴一覧</h3>
  <table class='table table-hover table-inverse mx-auto my-3'>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order.id) do %>
                <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
              <% end %>
            </td>
            <td><%= order.customer.last_name + order.customer.first_name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
            <td></td>
          </tr>
        <% end %>
        <%= paginate @orders %>
      </tbody>
    </thead>
  </table>

</div>
