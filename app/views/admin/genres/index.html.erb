<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4>ジャンル一覧・追加</h4>
      <div>
        <%= render 'layouts/errors', obj: @genre %>
        <%= render 'new', genre: @genre %>
      </div>
      
      
      <table class="table">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
        <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %></td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>