<div class="container">
  <h4>ジャンル編集</h4>
  <div class="row">
    <%= render 'layouts/errors', obj: @genre %>
    <div class="col-lg-8 m-3">
      <%= form_with model: @genre, url: admin_genre_path do |f| %>
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name, placeholder: "ジャンル名", class: "m-5" %>
        <%= f.submit "変更を保存", class: "btn btn-success mx-auto" %>
      <% end %>
    </div>
  </div>
</div>
