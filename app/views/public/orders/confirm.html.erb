<div class="container">
  <div class="row">
    <% @cart_items.each do |cart_item| %>
    <div class="col-sm-8">
      <table class="table table-brdered">
        <thead>
          <tr>
            <th>商品情報</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <%#= @total_amount = @total_amount + cart_item.subtotal %>
          <%#= @billing = @total_amount + @order.postage %>
          <tr>
            <td>
              <%= image_tag cart_item.item.get_image, size: "50x35" %>
              <%= cart_item.item.name %>
            </td>
            <td><%= (cart_item.item.price * 1.1).floor %></td>
            <td><%= cart_item.amount %></td>
            <td><%= (cart_item.item.price * 1.1).floor * cart_item.amount %></td>
          </tr>

        </tbody>
      </table>
    </div>
    <div class="col-sm-3">
      <table class="table table-bordered">
        <tr>
          <th>送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>商品合計</th>
          <td><%= @total_amount = @total_amount + cart_item.subtotal %></td>
        </tr>
        <tr>
          <th>請求金額</th>
          <td><%= @billing = @total_amount + @order.postage %></td>
        </tr>
      </table>
    </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-sm-8">
      <h4>支払い方法</h4>
      <%= @order.payment_method_i18n %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-8">
      <h4>お届け先</h4>
      <%= @order.postal_code %>
      <%= @order.address %>
      <%= @order.name %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-8">
      <%= form_with model: @order do |f| %>

        <%= f.hidden_field :name %>
        <%= f.hidden_field :postal_code %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :total_amount, :value => @total_amount %>
        <%= f.hidden_field :payment_method %>
        <%= f.hidden_field :postage %>

        <%= f.submit "注文を確定する", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>

</div>