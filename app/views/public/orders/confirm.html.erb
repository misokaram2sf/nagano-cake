<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <table class="table table-brdered">
        <thead>
          <tr>
            <th>商品情報</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.get_image, size: "15x10" %>
              <%= cart_item.item.name %>
              </td>
            <td><%= (cart_item.item.price * 1.1).floor %></td>
            <td><%= cart_item.amount %></td>
            <td><%= (cart_item.item.price * 1.1).floor * cart_item.amount %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-3">
      <table class="table table-bordered">
        <tr>
          <th>送料</th>
          <td><%= postage %></td>
        </tr>
        <tr>
          <th>商品合計</th>
          <td></td>
        </tr>
        <tr>
          <th>請求金額</th>
          <td></td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-4">
      <h4>支払い方法</h4>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-4">
      <h4>お届け先</h4>
    </div>
  </div>
  
</div>