<div class="container">
  <h4>注文情報入力</h4>
  <div class="row">
    <h5>支払い方法</h5>
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>

    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer] %>
  </div>

  <div class="row">
    <h5>お届け先</h5>

    <%= f.radio_button :address_type, "customer_address" %>
    <%= f.label :address_type, "ご自身の住所" %>
  </div>
  
  <div class="row">
    <%= f.radio_button :address_type, "registered_address" %>
    <%= f.label :address_type, "登録済住所から選択" %>
    <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
  </div>
  
  <div class="row">
    <%= f.radio_button :address_type, "new_address" %>
    <%= f.label :, "新しいお届け先" %>

    <%= form_with model: @order, url: public_order_path do |f| %>
      <table>
        <tr>
          <td>郵便番号（ハイフンなし）</td>
          <td><%= f.text_field :postal_code, :placeholder => "0000000" %></td>
        </tr>

        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, ;placeholder => "東京都渋谷区神園町0-0" %></td>
        </tr>

        <tr>
          <td>宛先</td>
          <td><%= f.text_field :name, placeholder => "令和道子" %></td>
        </tr>
      </table>
    <% end %>
  </div>
  
  <div class="btn btn-success">
    <%= f.submit "確認画面に進む" %>
  </div>

</div>