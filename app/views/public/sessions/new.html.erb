<main>
     <p id="notice"></p>
      <div class="container">
        <div class="row">
          <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">

      <h4>ログイン</h4>

       <h7>会員の方はこちらからログイン</h7>


         <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
       
        <table class="table table-borderless">

        <tr class="field">

          <td><%= f.label :メールアドレス %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>

        </tr>

        <tr class="field">

          <td><%= f.label :パスワード %></td>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>

        </tr>



        <tr class="actions">
          <td>
          <%= f.submit "ログイン", class:"btn btn-primary ml-3" %>
          </td>
        </tr>
        </table>

      <% end %>

      <h7>会員登録がお済みでない方は</h7>
      <p><%= link_to "こちら",new_customer_registration_path %>から新規登録を行ってください。
      </div>
        </div>
     </div>
</main>
