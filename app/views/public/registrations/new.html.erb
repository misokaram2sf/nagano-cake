<h4>新規会員登録</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前（姓） %> <em></em><br />
    <%= f.text_field :last_name, autofocus: true, maxlength: "8", autocomplete: "名前(性)" %>
  </div>

   <div class="field">
    <%= f.label :名前（名） %> <em></em><br />
    <%= f.text_field :first_name, autofocus: true, maxlength: "8", autocomplete: "名前(名)" %>
  </div>

  <div class="field">
    <%= f.label :フリガナ（セイ） %> <em></em><br />
    <%= f.text_field :last_name_kana, autofocus: true, maxlength: "8", autocomplete: "名前(名)" %>
  </div>

  <div class="field">
    <%= f.label :フリガナ（メイ）  %> <em></em><br />
    <%= f.text_field :first_name_kana, autofocus: true, maxlength: "8", autocomplete: "名前(名)" %>
  </div>


  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "郵便番号(ハイフンなし)" %>
  </div>

  <div class="field">
    <%= f.label :住所%><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "住所" %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "電話番号(ハイフンなし)" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（６文字以上）%></em>
    <% if @minimum_password_length %>

    <% end %><br />
    <%= f.password_field :password, autocomplete: "パスワード（6文字以上)" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %></em><br />
    <%= f.password_field :password_confirmation, autocomplete: "パスワード（確認用）" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<h4>既に登録済みの方はこちら</h4>
<p><%= link_to "こちら", new_customer_session_path %>からログインしてください</p>
