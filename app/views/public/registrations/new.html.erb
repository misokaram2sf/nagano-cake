<div class="container elegant-bg cake-font">
  <div class="row">
    <div class="col">
      <h2 class="my-4 elegant-header">新規会員登録</h2>

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <table class="table table-borderless">
          <tr>
            <td>名前</td>
            <td>(姓)<%= f.text_field :last_name, autofocus: true, placeholder: "山田" %>
                (名)<%= f.text_field :first_name, placeholder: "一朗" %></td>
          </tr>

          <tr>
            <td>フリガナ</td>
            <td>(セイ)<%= f.text_field :last_name_kana, placeholder: "ヤマダ"%>
                (メイ)<%= f.text_field :first_name_kana, placeholder: "イチロウ" %></td>
          </tr>

          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email, placeholder: "sample@sample.com", class: "wide-text-field" %></td>
          </tr>

          <tr>
            <td>郵便番号(ハイフンなし)</td>
            <td><%= f.text_field :postal_code, placeholder: "123456789" %></td>
          </tr>

          <tr>
            <td>住所</td>
            <td><%= f.text_field :address, placeholder: "東京都豊島区東池袋0-0", class: "wide-text-field" %></td>
          </tr>

          <tr>
            <td>電話番号(ハイフンなし)</td>
            <td><%= f.text_field :phone_number, placeholder: "123456789" %></td>
          </tr>

          <tr>
            <td>パスワード
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> 文字以上)</em>
                  <% end %>
            </td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>

          <tr>
            <td>パスワード(確認用)</td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>

          <tr>
            <td></td>
            <td><%= f.submit "新規登録", class:"btn btn-outline-danger ml-3" %></td>
          </t>
        </table>

        <h4 class="elegant-header-no-underline">既に登録済みの方</h4>
        <p class="center-button-container custom-padding">
          <%= link_to "こちら", new_customer_session_path, class: "elegant-link, style: text-decoration: underline; color: blue;" %>からログインしてください。
        </p>
      <% end %>
    </div>
  </div>
</div>