<main class="row justify-content-center col-12 mx-auto py-5">
  <div class="sidebar col-4">

    <%= render "public/genres/genre", genres: @genres %>
    
  </div>

  <div class="menu col-6 justify-content-center">
    <h4><%=@genre.name %>（全<%= @genre.items.all.count %>件）</h4>
    <div class="row row-cols-1 row-cols-xl-4 row-cols-lg-3 row-cols-md-2 mx-auto p-2">
      <% @genre.items.each do |item| %>
      <div class="item card-list-container col m-0.5 pb-5" >
        <%= link_to item_path(item.id) do %>
          <%= image_tag item.get_image, size:"200x150", class: "card-img-top", style: "object-fit: cover;" %>
          <h6 class="card-title text-dark", style="height:30px;"><%= item.name %></h6>
          <p class="card-text text-dark"><%= item.with_tax_price.to_s(:delimited) %>円</p>
        <% end %>
      </div>
      <% end %>
    </div>
    <%= paginate @paginate %>
  </div>
</main>

