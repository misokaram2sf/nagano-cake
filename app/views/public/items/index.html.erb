<div class="card-list-container py-5">
  <% @items.each do |item| %>
  <div class="card w-50 mx-auto mt-4">
    <%= link_to item_path(item.id) do %>
      <%= image_tag item.get_image, size:"300x200" %>
      </br><%= item.name %>
      </br><%= item.with_tax_price.to_s(:delimited) %>

    <% end %>

  </div>
  <% end %>
  <%= paginate @items %>
</div>
