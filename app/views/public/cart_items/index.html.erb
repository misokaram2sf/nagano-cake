<div class="container">
  <div class="row">
      <div class="col">

        <div class="d-flex align-item-caenter mx-auto">
            <h4 class="justify-content-center">ショッピングカート</h4>

            <% if @cart_items.empty? %>
            <% else %>
            <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, "data-confirm" => "商品を全て削除しますか?", class: "btn btn-outline-danger" %>
            <% end %>
        </div>


        　<% if @cart_items.empty? %>

        　<div class="justify-content-center">
        　 <h6>カートは空です</h6>

        　 <p><%= link_to "買い物を続ける", root_path, class: "btn btn-outline-danger" %></p>
        　</div>

        　<% else %>

        　<table class="table table-borderd">
              <!--テーブルヘッダー-->
              <tr class="table-danger">
                  <th>商品名</th>
                  <th>単価(税込)</th>
                  <th>数量</th>
                  <th>小計</th>
                  <th></br></th>
              </tr>

              <!--カート内商品一覧-->
              <tr>
                  <% @sun = 0 %>
                  <% @cart_items.each do |cart_item| %>

                  <td>
                      <%= image_tag cart_item.item.image, size: "100x70", style: "object-fit: cover;" %>
                      <%= link_to '/items/(:id)' do %><%= cart_item.item.name %><% end %>
                  </td>

                  <td><%= cart_item.item.with_tax_price.to_s(:delimited) %>円</td>

                  <td>
                      <%= form_with model:cart_item, url:cart_item_path(cart_item.id), local:true do |f| %>
                        <%= f.select :amount, *[1..10] %>
                        <%= f.submit "変更", class: "btn btn-outline-danger" %>
                      <% end %>
                  </td>

                  <td><%= cart_item.subtotal.to_s(:delimited) %>円</td>

                  <td><%= link_to "削除", cart_item_path(cart_item), method: :delete, "data-confirm" => "商品を削除しますか?", class: "btn btn-outline-danger" %></td>

              </tr>
              <% @sun += cart_item.subtotal %>
              <% end %>
          </table>



          <%= link_to "買い物を続ける", root_path, class: "btn btn-outline-danger" %>
          合計金額 <%= @sun.to_s(:delimited) %>円

          <%= link_to "情報入力に進む", new_order_path, class: "btn btn-outline-danger" %>

          <% end %>

    </div>
  </div>
</div>